<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Background color when pressed -->
            <solid android:color="#3F51B5" /> <!-- Adjust the color as needed -->
            <!-- Corner Radius -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color -->
            <solid android:color="#2196F3" /> <!-- Adjust the color as needed -->
            <!-- Corner Radius -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
</selector>
